<div class="row align-center mb-5">
  <div class="col-md-6">
  </div>
  </nav>
</div>
<section id="discover-drinks" class="discover">
  <span>Discover Cocktails
    <p> Explore a variety of cocktails and reciepes and create your own collection</p>
  </span>
  
  <form id="search-for-drink" class="form discover-form">
    <div class="form-group">
     <label for="search-drink"></label>
    <input type="text" class="discover-form-search" id="search-drink" placeholder="Search for Drinks">
    </div>
    <button class="explore-button" type="submit" id="drink-by-name-btn" >Start Exploring</button>
  </form>

</section>

<section id="cocktial-page"> cocktail search info
  <div>
    <img id="drinkType" src="">
    <h1 id="title">
    </h1>
    <div class="card"> 
      <h2>Ingredients: </h2>
        <span class="card-content" id="ingredients">
      </span>
    </div>
    <div class="card"> 
      <h2>How to make: </h2>
      <span class="card-content" id="instructions">
      </span>
    </div>
    <div class="card">
      <h2>Best Served in: </h2>
      <span class="card-content" id="glassware">
      </span>
    </div>
  </div>
</section>

<section class="random-drink"> Drink of the Day 
<img id="thumbnailImg" src="">
</section>
<section class="favorited-drinks" >
  <span>Favorited Drinks</span>
{{!-- For each drink in the array of drink objects, the following <div> will be rendered. --}}
{{#each drink as |drink|}}
<div class="row">
  <div class ="col s12 m6 lg6">
    <div class="card">
      <img class="card-content" id="drinkImg" src="">
      <a href="#" onclick="displayCocktailDetails('{{drink.cocktail.cocktail_name}}');">
        <span class="card-title" id="cocktail-name">{{drink.cocktail.cocktail_name}}
      </a>
      </span>
      <div class="card-action">
        <button> Unfavorite</button>
      </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
</section>
</div>
<script src="../js/age.js" type="text/javascript"></script>
<script src="../js/logout.js"></script>
<script src="../js/cocktailApiCalls.js"></script>