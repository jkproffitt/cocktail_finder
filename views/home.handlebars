<div class="navbar-fixed">
  <nav class="nav">
    <img src="/imgs/navheader.png" alt="Libation Logo" style="height: fit-content;width: 10rem;">
    <div class="nav-wrapper">
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li>
          {{#if logged_in}}
          <button>
            <a id="logout" href="logout">
            Logout
          </a></button>
          {{else}}
          <button><a href="login">
            Login
          </a></button>
          {{/if}}
        </li>
      </ul>
    </div>
  </div>
