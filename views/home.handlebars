<img id="thumbnailImg" src="">
</section>
<section >
{{!-- For each drink in the array of drink objects, the following <div> will be rendered. --}}
{{#each drink as |drink|}}
<div class="row">
  <div class ="col s12 m6 lg6">
    <div class="card">
      <img class="card-content" id="drinkImg" src="">
      <span class="card-title" id="cocktail-name">{{drink.cocktail.cocktail_name}}
      </span>
      <div class="card-action">
        <button> Unfavorite</button>
      </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
</section>
</div>
