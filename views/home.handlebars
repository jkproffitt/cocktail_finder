<nav class="navbar">
  <div class="container">
    <div class="navbar-brand">
      <img src="/imgs/navheader.png" alt="Libation Logo" style="width: 10rem;">
    </div>
    <div id="navbarMenu" class="navbar-menu">
      <div class="row align-center mb-5">
        {{#if logged_in}}
        <button><a class="navbar-item" id="logout">
          Logout
        </a></button>
        {{else}}
        <button><a class="navbar-item" href="login">
          Login
        </a></button>
        {{/if}}
      </div>
    </div>
  </div>
</nav>
<div class="row align-center mb-5">
  <div class="col-md-6">
    <form id="addFavoriteDrinkForm">
        <label for="drinkName">Add Favorite Drink:</label>
        <input type="text" id="drinkName" name="drinkName" required>
        <button type="submit">Add</button>
      </form>
  </div>
  <div class="col-md-6">
    {{!-- <h3><a href="mailto:test@gmail.com">test@gmail.com</a></h3> --}}
  </div>
</div>

{{!-- For each drink in the array of drink objects, the following <div> will be rendered. --}}
{{#each drink as |drink|}}
<div class="card article">
  <div class="card-content">
    <div>
      <h3></h3>
      <div class="has-text-right">
        <h4 class="has-text-weight-semibold">{{drink.cocktail.cocktail_name}}</h4>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>
<script src="../js/age.js" type="text/javascript"></script>
<script src="../js/logout.js"></script>
<script src="../public/js/favDrink.js"></script>